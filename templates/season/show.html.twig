{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Episodes:</strong>
    <ul>
        {% for episode in season.episodes %}
            <li><a href="{{ path('episode_show', { 'slug': episode.slug }) }}">{{ episode.number }}. {{ episode.title }} </a> </li>
        {% else %}
            <li>No episode associated with this show.</li>
        {% endfor %}
    </ul>

    <a href="{{ path('season_index') }}">back to list</a>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
    {{ include('season/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}

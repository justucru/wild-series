<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand+SC&family=Raleway&display=swap" rel="stylesheet">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="/">Wild Series</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active desktop">
                            <a class="nav-link" href="{{ path('category_index') }}">Genres<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active desktop">
                            <a class="nav-link" href="{{ path('program_index') }}">Shows<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active desktop">
                        {% if app.user %}
                            {{ app.user.email }}
                            <a href="{{ path('app_logout') }}">Logout</a>
                        {% else %}
                            <a href="{{ path('app_login') }}">Login</a>
                        {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
            <form class="form-inline search">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0 search-btn" type="submit">Search</button>
            </form>
        {% endblock %}
        <main>
        {% block body %}

        {% endblock %}
        </main>
        {% block footer %}
            <footer class="fixed-bottom">
                <a href="{{ path('app_index') }}"><i class="fas fa-home footer-btn"></i></a>
                <a href="{{ path('program_index') }}"><i class="fas fa-tv footer-btn"></i></a>
                <a href="{{ path('category_index') }}"><i class="fas fa-folder footer-btn"></i></a>
                <a href="#"><i class="fas fa-user footer-btn"></i></a>
            </footer>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>

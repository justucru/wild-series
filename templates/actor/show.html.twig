{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Associated shows</th>
                {% for program in actor.programs %}
                    <td><a href="{{ path('program_show', { 'slug': program.slug }) }}">{{ program.title }}</a></td>
                {% else %}
                    <td>No shows associated with this actor.</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">back to list</a>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>
    {{ include('actor/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}

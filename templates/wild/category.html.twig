{% extends 'base.html.twig' %}

{% block title %}{{ categoryName}} programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la categorie {{ categoryName }} : </h1>
    {% for program in programList %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <br>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}